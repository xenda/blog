<h2>Iniciar sesión</h2>

<% form_for resource_name, resource, :url => session_path(resource_name) do |f| -%>
  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.label :password %></p>
  <p><%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, "Recordarme" %></p>
  <% end -%>

  <p><%= f.submit "Iniciar sesión" %></p>
<% end -%>

<%- if devise_mapping.recoverable? %>
  <%= link_to "¿Olvidó su clave?", new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? %>
  <%= link_to "¿No recibió instrucciones de confirmación?", new_confirmation_path(resource_name) %><br />
<% end -%>
