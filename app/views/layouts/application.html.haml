!!! Strict
%html{html_attrs}

  %head
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application'
    = yield(:head)

  %body
    #header
      .contenido_header
        #logo
          %p="cristian<span class='apa'>Castillo</span>"
          %p.slogan
            Consultor y desarrollador WEB
        #user
          .current_user
            = render :partial => 'layouts/usuario'
          #menu
            = lenguetas
          .clear
        .clear

    #center
      .contenido
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
          
        #izquierda
          - if show_title?
            %h1= yield(:title)

          = yield

        #derecha
          %p
            = image_tag @user.gravatar_url if @user
          %p
            Buscador (Google)

          %p
            Suscribirse

          %p 
            Categor√≠as

          = categorias

          %p
            Tags
        
          - if user_signed_in?
            %p= link_to("Nueva entrada", new_user_post_path(current_user))
  
        .clear
      
    #footer
      .contenido
        Desarrollado por 
        = link_to "Z-nexus", "http://z-nexus.com"

