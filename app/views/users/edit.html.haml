- title 'Cambiar mis datos'

- form_for @user do |f|
  - field_set_tag 'Cambiar email' do
    %p= f.text_field :email
    = error_message_on @user, :email
    %p.submit= f.submit 'Actualizar datos'

- form_for @user do |f|
  - field_set_tag 'Cambiar clave' do
    %p= f.password_field :password
    = error_message_on @user, :password
    %p= f.password_field :password_confirmation
    = error_message_on @user, :password_confirmation
    %p.submit= f.submit 'Cambiar clave'

- form_for @user do |f|
  - field_set_tag 'Datos básicos' do
    %p= f.label :nombre
    = error_message_on @user, :nombre
    %p= f.text_field :nombre
    %p= f.label :nick, "Iniciales o nick"
    %p= f.text_field :nick
    = error_message_on @user, :nick
    %p.submit= f.submit 'Registrar'

= link_to "Cancelar la cuenta", @user, :method => :delete, :confirm => "Borraré totalmente la cuenta. ¿Estás realmente seguro?"